                <i class="fas fa-bars text-2xl"></i>
            </button>
        </div>
        </div>
    </nav>

    <!-- Mobile Menu Overlay & Slide Menu -->
    <div id="mobileMenuOverlay"
        class="mobile-menu-overlay fixed inset-0 z-50 hidden opacity-0 transition-opacity duration-300">
        <!-- Overlay untuk menutup menu -->
        <div class="absolute inset-0 bg-black/50" id="closeMenuOverlay"></div>

        <!-- Menu Slide dari Kanan -->
        <div class="mobile-menu-slide absolute right-0 top-0 h-full w-64 bg-white dark:bg-gray-900">
            <!-- Header Menu Mobile -->
            <div class="flex items-center justify-between p-6 border-b dark:border-gray-700">
                <h2 class="text-xl font-bold text-blue-600 dark:text-blue-400">Menu</h2>
                <button id="closeMobileMenu"
                    class="text-gray-500 dark:text-gray-400 hover:text-red-500 dark:hover:text-red-400 transition-colors duration-300">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>

            <!-- Menu Items -->
            <div class="p-6 space-y-6">
