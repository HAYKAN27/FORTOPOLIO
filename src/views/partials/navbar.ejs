        </div>
    </div>

    </nav>
    <!-- JavaScript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });

        // Dark Mode Toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        const darkIcon = document.getElementById('darkIcon');
        const htmlElement = document.documentElement;

        // Check for saved theme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            enableDarkMode();
        }

        darkModeToggle.addEventListener('click', () => {
            if (htmlElement.classList.contains('dark')) {
                disableDarkMode();
            } else {
                enableDarkMode();
            }
        });

        function enableDarkMode() {
            htmlElement.classList.add('dark');
            darkIcon.classList.remove('fa-moon');
            darkIcon.classList.add('fa-sun');
            localStorage.setItem('theme', 'dark');
        }

        function disableDarkMode() {
            htmlElement.classList.remove('dark');
            darkIcon.classList.remove('fa-sun');
            darkIcon.classList.add('fa-moon');
            localStorage.setItem('theme', 'light');
        }

        // Mobile Menu Functionality with Smooth Animation
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
        const closeMobileMenu = document.getElementById('closeMobileMenu');
        const closeMenuOverlay = document.getElementById('closeMenuOverlay');
        const mobileMenuSlide = mobileMenuOverlay.querySelector('.mobile-menu-slide');

        // Open mobile menu
        mobileMenuButton.addEventListener('click', () => {
            openMobileMenu();
        });

        // Close mobile menu with close button
        closeMobileMenu.addEventListener('click', () => {
            closeMobileMenuFunc();
        });

        // Close mobile menu with overlay click
        closeMenuOverlay.addEventListener('click', () => {
            closeMobileMenuFunc();
        });

        // Close mobile menu with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !mobileMenuOverlay.classList.contains('hidden')) {
                closeMobileMenuFunc();
            }
        });

        // Close menu when clicking on menu links
        mobileMenuOverlay.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                // Delay closing to allow smooth transition
                setTimeout(() => {
                    closeMobileMenuFunc();
                }, 300);
            });
        });

        function openMobileMenu() {
            // Show overlay
            mobileMenuOverlay.classList.remove('hidden');

            // Trigger reflow to enable transition
            void mobileMenuOverlay.offsetWidth;

            // Add open classes with delay for smooth animation
            setTimeout(() => {
                mobileMenuOverlay.classList.remove('opacity-0');
                mobileMenuSlide.classList.add('open');
            }, 10);

            // Disable body scroll
            document.body.style.overflow = 'hidden';
        }

        function closeMobileMenuFunc() {
            // Remove open classes
            mobileMenuSlide.classList.remove('open');
            mobileMenuOverlay.classList.add('opacity-0');

            // Hide overlay after transition
            setTimeout(() => {
                mobileMenuOverlay.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }, 400); // Match this with CSS transition duration
        }

        // Animate skill bars on scroll (jika ada section skills)
        const observerOptions = {
            threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const skillBars = entry.target.querySelectorAll('.skill-progress');
                    skillBars.forEach(bar => {
                        const width = bar.style.width;
                        bar.style.width = '0';
                        setTimeout(() => {
                            bar.style.width = width;
                        }, 300);
                    });
                }
            });
        }, observerOptions);

        // Observe skills section if exists
        const skillsSection = document.getElementById('skills');
        if (skillsSection) {
            observer.observe(skillsSection);
        }
    </script>
