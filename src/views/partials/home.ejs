        /* Background Decoration */
        .hero-bg-decoration {
            position: absolute;
            width: 400px;
            height: 400px;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.2;
            z-index: 0;
        }

        @media (max-width: 768px) {
            .hero-bg-decoration {
                width: 250px;
                height: 250px;
