            border-radius: 1.5rem;
            z-index: -1;
            animation: rotate 4s linear infinite;
        }

        @media (max-width: 768px) {
            .profile-img-border {
                inset: -3px;
                border-radius: 1rem;
            }
        }

        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Glowing Effect */
        .glow-on-hover {
            position: relative;
            transition: all 0.3s ease;
        }

        .glow-on-hover:hover {
            box-shadow: 0 0 30px rgba(37, 99, 235, 0.5);
