  <script>
        // Data Array Projects
        const projects = [
            {
                id: 1,
                title: "Cemal - Cemil",
                description: "Website usaha dengan sistem pemesanan online untuk UMKM kuliner.",
                gradient: "from-orange-500 to-red-600",
                image: "./img/project.png",
                icon: null,
                technologies: [
                    { name: "EJS", color: "blue" },
                    { name: "Tailwind", color: "blue" },
                    { name: "Mysql", color: "yellow" },
                    { name: "Express", color: "green" }
                ],
                liveDemo: "#",
                github: "#"
            },
            {
                id: 2,
                title: "KuPinjam",
                description: "Platform Peminjaman mobil untuk karyawan PT lengkap dengan sistem dan pencatatan Otomatis.",
                gradient: "from-blue-500 to-purple-600",
                image: "./img/project2.png",
                icon: "fas fa-shopping-cart",
                technologies: [
                    { name: "Laravel", color: "blue" },
                    { name: "Tailwind", color: "blue" },
                    { name: "Node.js", color: "green" },
                    { name: "MongoDB", color: "green" }
                ],
                liveDemo: "#",
                github: "#"
            },
            {
                id: 3,
                title: "MUTU Bazaar",
                description: "Platform Digital Bazaar MUTU ",
                gradient: "from-green-500 to-teal-600",
                image: null,
                icon: "fas fa-building",
                technologies: [
                    { name: "NextJS", color: "blue" },
                    { name: "Tailwind", color: "blue" },
                    { name: "TypeScript", color: "yellow" },
                    { name: "MongoDB", color: "purple" }
                ],
                liveDemo: "#",
                github: "#"
            }
        ];

        // Helper function untuk mendapatkan class warna badge
        function getBadgeColorClass(color) {
            const colorMap = {
                blue: "bg-blue-100 dark:bg-blue-800 text-blue-800 dark:text-blue-200",
                yellow: "bg-yellow-100 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-200",
                green: "bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-200",
                purple: "bg-purple-100 dark:bg-purple-800 text-purple-800 dark:text-purple-200"
            };
            return colorMap[color] || colorMap.blue;
        }

        // Function untuk render projects
        function renderProjects() {
            const projectGrid = document.getElementById('projectGrid');
            
            projectGrid.innerHTML = projects.map(project => `
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-3 transition duration-300">
                    <div class="h-48 bg-gradient-to-r ${project.gradient} flex items-center justify-center">
                        ${project.image 
                            ? `<img src="${project.image}" alt="${project.title}" class="w-full h-full object-cover">` 
                            : `<i class="${project.icon} text-white text-6xl"></i>`
                        }
                    </div>
                    <div class="p-6">
                        <h3 class="text-2xl font-bold mb-3 dark:text-white">${project.title}</h3>
                        <p class="text-gray-600 dark:text-gray-400 mb-4">
                            ${project.description}
                        </p>
                        <div class="flex flex-wrap gap-2 mb-6">
                            ${project.technologies.map(tech => `
                                <span class="px-3 py-1 ${getBadgeColorClass(tech.color)} text-sm rounded-full">
                                    ${tech.name}
                                </span>
                            `).join('')}
                        </div>
                        <div class="flex justify-between">
                            <a href="${project.liveDemo}" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition flex items-center">
                                <i class="fas fa-external-link-alt mr-2"></i>Live Demo
                            </a>
                            <a href="${project.github}" class="px-4 py-2 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition flex items-center">
                                <i class="fab fa-github mr-2"></i>GitHub
                            </a>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Render projects saat halaman dimuat
        document.addEventListener('DOMContentLoaded', renderProjects);
    </script>
</body>

</html>