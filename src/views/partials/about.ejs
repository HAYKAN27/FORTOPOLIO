    // Render Gallery
    function renderGallery(filter = 'all') {
        const grid = document.getElementById('galleryGrid');
        currentFilteredItems = filter === 'all' ? galleryData : galleryData.filter(item => item.category === filter);

        grid.innerHTML = currentFilteredItems.map((item, index) => `
            <div class="gallery-item rounded-2xl shadow-xl cursor-pointer bg-gray-900 group overflow-hidden" data-index="${index}" data-category="${item.category}">
