                        <button class="view-gallery-btn px-4 py-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 rounded-lg text-sm font-semibold transition" data-index="${index}">
                            <i class="fas fa-eye mr-2"></i>View
                        </button>
                        <div class="flex gap-2">
                            <button class="w-10 h-10 bg-white/10 backdrop-blur-sm hover:bg-white/20 rounded-lg transition flex items-center justify-center">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="w-10 h-10 bg-white/10 backdrop-blur-sm hover:bg-white/20 rounded-lg transition flex items-center justify-center">
                                <i class="fas fa-share-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `).join('');

        // Add click events for gallery items
        document.querySelectorAll('.gallery-item').forEach((item, idx) => {
            item.addEventListener('click', (e) => {
                if (!e.target.closest('.view-gallery-btn')) {
                    openLightbox(idx);
                }
            });
        });

        // Add click events for view buttons
        document.querySelectorAll('.view-gallery-btn').forEach((btn) => {
            btn.addEventListener('click', function (e) {
                e.stopPropagation();
                const idx = parseInt(this.dataset.index, 10);
                openLightbox(idx);
            });
        });
    }

    // Filter functionality
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', function () {
            // Update active state
            document.querySelectorAll('.filter-btn').forEach(b => {
                b.classList.remove('active', 'bg-gradient-to-r', 'from-purple-600', 'to-pink-600', 'text-white');
                b.classList.add('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300', 'border', 'border-gray-200', 'dark:border-gray-700');
            });

            this.classList.add('active', 'bg-gradient-to-r', 'from-purple-600', 'to-pink-600', 'text-white');
            this.classList.remove('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300', 'border', 'border-gray-200', 'dark:border-gray-700');

            // Filter gallery
            const filter = this.dataset.filter;
            currentFilter = filter;
            renderGallery(filter);
        });
    });

    // Lightbox functionality
    function openLightbox(index) {
        currentItemIndex = index;
        currentImageIndex = 0;
        const item = currentFilteredItems[index];
        const lightbox = document.getElementById('lightbox');
        const content = document.getElementById('lightboxContent');

        // Render lightbox content
        content.innerHTML = `
            <div class="bg-gray-900 rounded-2xl overflow-hidden">
                <div class="p-8">
                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-6">
                        <div>
                            <span class="px-3 py-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-semibold rounded-full inline-block mb-2">
                                ${item.category.charAt(0).toUpperCase() + item.category.slice(1)}
                            </span>
                            <h3 class="text-2xl md:text-3xl font-bold text-white">${item.title}</h3>
                        </div>
                        <span class="text-gray-400 text-sm mt-2 md:mt-0">
                            <i class="far fa-calendar mr-2"></i>${item.date}
                        </span>
                    </div>
                    
                    <p class="text-gray-300 text-lg mb-6">${item.description}</p>
                    
                    ${item.images && item.images.length > 0 ? `
                        <div class="mb-6">
                            <div class="flex items-center justify-center mb-4 bg-black/20 rounded-lg p-2 md:p-4">
                                <img id="currentLightboxImage" src="${item.images[0]}" class="max-h-[50vh] md:max-h-[55vh] w-auto object-contain rounded-lg shadow-2xl" alt="${item.title}">
                            </div>
                            
                            ${item.images.length > 1 ? `
                                <div class="flex gap-3 md:gap-4 overflow-x-auto py-3 md:py-4 px-2 custom-scrollbar">
                                    ${item.images.map((img, imgIndex) => `
                                        <img src="${img}" 
                                             class="thumbnail h-16 w-24 md:h-20 md:w-32 flex-shrink-0 object-cover rounded-lg cursor-pointer hover:opacity-100 transition-all ${imgIndex === 0 ? 'opacity-100 ring-2 ring-purple-500' : 'opacity-60'}" 
                                             data-index="${imgIndex}"
                                             alt="Thumbnail ${imgIndex + 1}">
                                    `).join('')}
                                </div>
                                <div class="text-center text-gray-400 text-sm mt-2">
                                    <span id="imageCounter">${currentImageIndex + 1} / ${item.images.length}</span>
                                </div>
                            ` : ''}
                        </div>
                    ` : `
                        <div class="text-center py-12">
                            <i class="fas fa-image text-7xl text-gray-700 mb-4"></i>
                            <p class="text-gray-500">No images available</p>
                        </div>
                    `}
                </div>
            </div>
        `;

        // Add event listeners for thumbnails
        if (item.images && item.images.length > 1) {
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const idx = parseInt(this.dataset.index);
                    currentImageIndex = idx;
                    updateLightboxImage(item.images[idx]);
                    
                    // Update active thumbnail
                    document.querySelectorAll('.thumbnail').forEach(t => {
                        t.classList.remove('opacity-100', 'ring-2', 'ring-purple-500');
                        t.classList.add('opacity-60');
                    });
                    this.classList.add('opacity-100', 'ring-2', 'ring-purple-500');
                    this.classList.remove('opacity-60');
                });
            });
        }

        lightbox.classList.remove('hidden');
        lightbox.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function updateLightboxImage(src) {
        const img = document.getElementById('currentLightboxImage');
        if (img) {
            img.src = src;
        }
        
        // Update counter
        const item = currentFilteredItems[currentItemIndex];
        const counter = document.getElementById('imageCounter');
        if (counter && item.images) {
            counter.textContent = `${currentImageIndex + 1} / ${item.images.length}`;
        }
    }

    function closeLightbox() {
        const lightbox = document.getElementById('lightbox');
        lightbox.classList.add('hidden');
        lightbox.classList.remove('flex');
        document.body.style.overflow = 'auto';
    }

    function nextImage() {
        const item = currentFilteredItems[currentItemIndex];
        if (item.images && item.images.length > 1) {
            currentImageIndex = (currentImageIndex + 1) % item.images.length;
            updateLightboxImage(item.images[currentImageIndex]);
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach((thumb, idx) => {
                if (idx === currentImageIndex) {
                    thumb.classList.add('opacity-100', 'ring-2', 'ring-purple-500');
                    thumb.classList.remove('opacity-60');
                } else {
                    thumb.classList.remove('opacity-100', 'ring-2', 'ring-purple-500');
                    thumb.classList.add('opacity-60');
                }
            });
        }
    }

    function prevImage() {
        const item = currentFilteredItems[currentItemIndex];
        if (item.images && item.images.length > 1) {
            currentImageIndex = (currentImageIndex - 1 + item.images.length) % item.images.length;
            updateLightboxImage(item.images[currentImageIndex]);
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach((thumb, idx) => {
                if (idx === currentImageIndex) {
                    thumb.classList.add('opacity-100', 'ring-2', 'ring-purple-500');
                    thumb.classList.remove('opacity-60');
                } else {
                    thumb.classList.remove('opacity-100', 'ring-2', 'ring-purple-500');
                    thumb.classList.add('opacity-60');
                }
            });
        }
    }

    // Event listeners
    document.getElementById('closeLightbox').addEventListener('click', closeLightbox);
    document.getElementById('nextImage').addEventListener('click', nextImage);
    document.getElementById('prevImage').addEventListener('click', prevImage);

    // Close lightbox when clicking outside
    document.getElementById('lightbox').addEventListener('click', function (e) {
        if (e.target === this) closeLightbox();
    });

    // Keyboard navigation
    document.addEventListener('keydown', function (e) {
        const lightbox = document.getElementById('lightbox');
        if (!lightbox || lightbox.classList.contains('hidden')) return;

        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowRight') nextImage();
        if (e.key === 'ArrowLeft') prevImage();
    });

    // Initial render
    renderGallery();
</script>


